{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test*"
  ],
  "files": [
    "src/poliedro-lib-test.tsx"
  ]
}
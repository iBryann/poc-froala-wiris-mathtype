{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "module": "ESNext",
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "files": ["src/poliedro-lib-test-utils.tsx"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
